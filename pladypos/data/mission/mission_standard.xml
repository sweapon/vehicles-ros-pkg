<launch>

    <!-- ========================================================= -->
    <!-- == Arguments ============================================ -->
    <!-- ========================================================= -->
    <arg name="topside" default="false" />

    <!-- ========================================================= -->
    <!-- == Mission execution node =============================== -->
    <!-- ========================================================= -->

    <node
	unless="$(arg topside)" 
        name="mission_execution_node" 
        pkg="labust_mission" 
        type="mission_exec">
        
        <remap from="stateHat" to="position" />
    </node>

    <node
	unless="$(arg topside)"  
        name="data_event_node" 
        pkg="labust_mission" 
        type="data_event_manager">
        
        <remap from="stateHat" to="position"/>       
    </node>

</launch>
